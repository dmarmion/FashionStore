<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <nav>
            <p class="center"><b><%= yield(:title) %></b></p>
            <!-- Dropdown menu -->
            <ul class="nav navbar-nav navbar-left">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Menu <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Home", root_path %></li>
                        <li class="divider"></li>
                        <% Collection.all.each do |collection| %>
                            <!-- If you don't have the / before the controller name, devise will yell at you -->
                            <li><%= link_to collection.name, controller: '/collections', action: 'show', id: collection.id %></li>
                        <% end %>
                        <li class="divider"></li>
                        <li><%= link_to "Saved List", saved_list_path %></li>
                        <li><%= link_to "Help & Support", support_path %></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Shopping Bag", '#' %></li>
                <li><%= link_to "Search", '#' %></li>
            </ul>
        </nav>
    </div>
</header>